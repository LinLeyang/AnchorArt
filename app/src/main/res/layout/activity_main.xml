<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.penta.anchorart.ObservableScrollView
        android:id="@+id/sv_aiming_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/nice_green"
                    android:gravity="center"
                    android:text="顶部控件"
                    android:textColor="@color/antiquewhite"
                    android:textSize="20sp" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/inside_tab"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/nice_green"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/nice_green" />


                <TextView
                    android:id="@+id/tv_good_detail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/nice_light_green"
                    android:gravity="center"
                    android:text="商品详情标题"
                    android:textColor="@color/antiquewhite"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/nice_light_green"
                    android:gravity="center"
                    android:text="商品详情具体内容"
                    android:textColor="@color/antiquewhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/nice_yellow"
                    android:gravity="center"
                    android:text="图片标题"
                    android:textColor="@color/antiquewhite"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/nice_yellow"
                    android:gravity="center"
                    android:text="图片具体内容"
                    android:textColor="@color/antiquewhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/nice_red"
                    android:gravity="center"
                    android:text="评价标题"
                    android:textColor="@color/antiquewhite"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/nice_red"
                    android:gravity="center"
                    android:text="评价具体内容"
                    android:textColor="@color/antiquewhite"
                    android:textSize="20sp" />


            </LinearLayout>

        </RelativeLayout>


    </com.penta.anchorart.ObservableScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/outside_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/nice_green"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/nice_green" />
</RelativeLayout>